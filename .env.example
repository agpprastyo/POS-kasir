# ==============================================
# Server & Application Config
# ==============================================
APP_ENV=development
APP_NAME=POS-Kasir
APP_PORT=8080

COOKIE_DOMAIN=
WEB_FRONTEND_CROSS_ORIGIN=false

# ==============================================
# Database (PostgreSQL)
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=user1
DB_PASSWORD=passwordrahasia
DB_NAME=kasir-db
DB_SSLMODE=disable

# Connection Pool Settings
DB_MAX_OPEN_CONNECTIONS=10
DB_MAX_IDLE_CONNECTIONS=2
DB_MAX_LIFETIME_MINUTES=10

# ==============================================
# Migration
# ==============================================
AUTO_MIGRATE=false
MIGRATIONS_PATH=./sqlc/migrations

# ==============================================
# Logger
# ==============================================
