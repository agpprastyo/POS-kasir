LOG_LEVEL=info
LOG_JSON_FORMAT=true

# ==============================================
# JWT (Authentication)
# ==============================================
JWT_SECRET=secret
JWT_DURATION_HOURS=24
JWT_ISSUER=poskasir

# ==============================================
# Midtrans (Payment Gateway)
# ==============================================
MIDTRANS_SERVER_KEY=
MIDTRANS_IS_PROD=false

# ==============================================


